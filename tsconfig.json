{
  "compilerOptions": {
    "target": "esnext",
    "moduleResolution": "node",
    "esModuleInterop": false,
    "allowSyntheticDefaultImports": true,
    "lib": ["esnext"],
    "allowJs": false,
    "noEmit": true,
    "strict": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "noImplicitAny": false,
    "baseUrl": "src",
    "paths": {
      "@/core/*": ["core/*"]
    }
  },
  "include": ["src", "definitions.d.ts"],
  "exclude": ["node_modules", ".prettierrc.js"]
}
